<div class="my-6">
  <label for="{{name}}" class="block">{{title}}</label>
  <select name="{{name}}" id="{{name}}" class="border border-gray-300">
    @each(option in options)
      <option value="{{option.id}}">{{option.name}}</option>
    @end
  </select>
  @inputError(name)
    {{ $messages }}
  @end
</div>
